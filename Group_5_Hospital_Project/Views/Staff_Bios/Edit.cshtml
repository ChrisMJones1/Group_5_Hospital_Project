@model Group_5_Hospital_Project.Models.Staff_Bios

@{
    ViewBag.Title = "Edit";
}

<h2>Edit Bio</h2>

<form action="" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Staff_Bios</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Staff_Bio_ID)

        <div class="form-group">
            <label class="control-label col-md-2" for="Staff_Bio_Name">Your Full name and title</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Staff_Bio_Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Staff_Bio_Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="Staff_Bio_Text">Your Bio text</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Staff_Bio_Text, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Staff_Bio_Text, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="form-group">
                <label for="DocPic">Upload your profile picture</label>
                <div class="col-md-10">
                    <input type="file" accept="image/*" name="DocPic" id="DocPic" />
                </div>
            </div>
            @if(Model.Staff_Bio_Image_Path != null)
            { 
            <div>
                Current Picture:
                <img src="~/Content/Bio_Images/@Model.Staff_Bio_Image_Path" alt="Picture of @Model.Staff_Bio_Name" class="img-fluid"/>
            </div>
            }
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-success" />
        </div>
    </div>
    </div>
</form>

<div>
    @Html.ActionLink("Back to List", "Index", "", new {@class="btn btn-primary" })
</div>
