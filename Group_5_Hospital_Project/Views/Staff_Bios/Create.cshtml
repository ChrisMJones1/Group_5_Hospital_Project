@model Group_5_Hospital_Project.Models.ViewModels.AddBio

@{
    ViewBag.Title = "Create";
    
}

<h2>Create</h2>

<form action="" method="post" enctype="multipart/form-data">

    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="h4">Staff_Bios</div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @if (User.Identity.Permission() == 3) //if the user is an admin, display the drop down list of Staff without Bios
        {
            <select class="form-control" id="user_id" name="user_id">
                @foreach (var user in Model.staff_list)
                {
                    <option value="@user.Id">@user.UserName</option>
                }
            </select>
        }

        <div class="form-group">
            <label class="control-label col-md-2" for="Staff_Bio_Name">Your Full name and title</label>
             <div class="col-md-10">
                 <input class="form-control text-box single-line" id="Staff_Bio_Name" name="Staff_Bio_Name" type="text" value="">
                 <span class="field-validation-valid text-danger" data-valmsg-for="Staff_Bio_Name" data-valmsg-replace="true"></span>
                
             </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="Staff_Bio_Text">Your Bio text</label>
            <div class="col-md-10">
                <input class="form-control text-box single-line" id="Staff_Bio_Text" name="Staff_Bio_Text" type="text" value="">
                <span class="field-validation-valid text-danger" data-valmsg-for="Staff_Bio_Text" data-valmsg-replace="true"></span>

            </div>
        </div>

        <div class="form-group">
            <label for="DocPic">Upload your profile picture</label>
            <div class="col-md-10">
                <input type="file" accept="image/*" name="DocPic" id="DocPic" />
            </div>
        </div>
    </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </div>
 

    </form>

    <div>
        @Html.ActionLink("Back to List", "Index", "", new {@class="btn btn-primary" })
    </div>
