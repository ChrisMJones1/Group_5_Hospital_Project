@model IEnumerable<Group_5_Hospital_Project.Models.Feedback_Forms>

@{
    ViewBag.Title = "List";
}

<h2>List</h2>

<p>
    @Html.ActionLink("Create New", "Add", "", new {@class="btn btn-success" })
</p>

@* Pagination code created by Christine *@
<div class="paginate">
    @{
        <a href="/Feedback_Forms/List?pagenum=@((int)ViewData["pagenum"]-1)">Prev</a>
        @ViewData["pagesummary"]
        <a href="/Feedback_Forms/List?pagenum=@((int)ViewData["pagenum"]+1)">Next</a>
    }
</div>


<table class="table table-dark">
    <tr>
        @if (User.Identity.Permission() == 3) //for admin view only
        {
            <th>
                UserID
            </th>
        }
        <th>
            Rating
        </th>
        <th>
            Comment
        </th>
        <th>
            Email
        </th>
        <th>
            Date
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    @if (User.Identity.Permission() == 3) //for admin view only
    {
    <td>
        @Html.DisplayFor(modelItem => item.User.Id)
    </td>
    }
    <td>
        @Html.DisplayFor(modelItem => item.Feedback_Forms_Rating)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Feedback_Forms_Comment)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Feedback_Forms_Email)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Feedback_Forms_Date)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.Feedback_Forms_ID }, new {@class="btn btn-warning" }) |
        @Html.ActionLink("Details", "Details", new { id = item.Feedback_Forms_ID }, new {@class="btn btn-primary" }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.Feedback_Forms_ID }, new {@class="btn btn-danger" })
    </td>
</tr>
}

</table>
