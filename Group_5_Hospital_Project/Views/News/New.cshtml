@model List<Group_5_Hospital_Project.Models.News>
@{
    ViewBag.Title = "New";
}

<h2>Add a News</h2>

<div class="navbar">
    <a class="navlink" href="/News/List">Back to List</a>
</div>
<form method="POST" action="/News/Add">

    <div class="inpfield"><span>Title:</span><input id="news_title" type="text" name="news_title" /></div>
    <div class="inpfield"><span>Date:(mm/dd/yyyy)</span><input id="news_date" type="text" name="news_date" /></div>
    <div class="inpfield"><span>Description:</span><input id="news_description" type="text" name="news_description" /></div>


    <div class="inpfield">
        <input type="submit" value="Add News">
    </div>
</form>
